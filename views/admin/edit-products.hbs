<section>
  <div class="container bg-success">
    <h4 class="text-center">edit products</h4>
    <div class="row">
      <form action="/admi/edit-products/{{product._id}}" method="post" enctype="multipart/form-data">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">name</label>
            <input type="text" name="name" value="{{product.name}}" class="form-control" id="inputEmail4">
          </div>
          <div class="form-group col-md-6">
            <label for="inputEmail4">Model</label>
            <input type="text" name="Model" value="{{product.Model}}" class="form-control" id="inputEmail4">
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">price</label>
          <input type="text" name="prize" value="{{product.prize}}" class="form-control" id="inputAddress">
        </div>
        <div class="form-group">
          <div class="form-check">
            <form>
              <div class="form-group">
                <label for="">image</label>
                <img src="/product-image/{{product._id}}.jpg" alt="" style="width:100px;height:auto;" id="imgView">
                <p id="errorMsg" hidden></p>
                <input type="file" name="image" class="form-control-file" id="file" onchange="viewImage(event)" required>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>


<script>
  const file = document.getElementById('file')
  const form = document.querySelector('form')
  const errorMsg = document.getElementById('errorMsg')

  form.addEventListener("submit", (e) => {
    const errors = []

    if (file.value.trim() === "") {
      errors.push("image is require")
    }
    if (errors.length > 0) {
      e.preventDefault()
      ErrorMsg.toggleAttribute('hidden')
      ErrorMsg.innerHTML = errors.join(', ')
    }
  })

</script>

<script>
  function viewImage(event) {
    document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
  }
</script>