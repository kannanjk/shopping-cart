
   

  <section>
    <div class="container-fluid  bg-primary">
        <div class="row ">
            {{#each products}}
    <div class="col-sm-4 col-md-3 col-lg-3 col-xl-2 md-3 m-4 p-3 ">
                <div class="card bg-danger" style="width: 18rem height: 20rem;">
                    <img src="/product-image/{{this._id}}.jpg" class="card-img-top" style="height: 206px;" alt="Fissure in Sandstone" />
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h5 class="card-title">{{this.Model}}</h5>
                        <p class="card-text text-light">G-SHOCK Watches designed to resist mechanical shock and vibrations</p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-dark text-white">Add to cart </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
      
    </div>
</section>

